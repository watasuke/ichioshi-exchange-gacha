<div class="container-fluid bg-light">
    <h1 class="text-center">イチオシコレクション</h1>
    <% @collections.each do |post| %>
    <div class="card w-75 mx-auto d-block">
    <div class="card-body">
        <h2 class="card-title"><%= link_to(post.title, "/posts/#{post.slug}") %></h2>
        <img src="<%= post.user.image_url %>" alt="">
        <%= post.user.user_name %>
    </div>
    </div>
    <% end %>
</div>