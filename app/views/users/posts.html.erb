<h1 class="text-center">あなたのイチオシ一覧</h1>
<% @user.posts.each do |post| %>
<div class="card w-75 mx-auto d-block">
  <div class="card-body">
    <h2 class="card-title"><%= link_to(post.title, "/posts/#{post.slug}") %></h2>
    <img src="<%= @user.image_url %>" class="rounded-circle">
    <%= link_to "#{@user.user_name}", "https://twitter.com/#{@user.user_name}" %>
  </div>
</div>
<% end %>
