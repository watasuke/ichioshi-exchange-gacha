<div class="card w-75">
  <div class="card-body">
    <h1 class="card-title"><%= @post.title %></h1>
    <p class="card-text"><%= @post.comment %></p>
    <img src="<%= @user.image_url %>" class="rounded-circle">
    <%= link_to "#{@user.user_name}", "https://twitter.com/#{@user.user_name}" %>
  </div>
</div>

<div>
    <%= link_to 'ガチャ結果をツイート', "https://twitter.com/intent/tweet?url=#{request.url}&lang=ja&related=watasuke221:イチオシ交換ガチャの作者&text=#{@post.title} - @#{@user.user_name}のイチオシをゲットしました！", rel: 'nofollow',target: "_blank", class: 'btn btn-primary btn-lg' %>
</div>

<div>
    <%= link_to 'イチオシガチャを回す', '/results/create', class: 'btn btn-primary btn-lg' %>
</div>
