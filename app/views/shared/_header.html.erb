<div id="header">
    <header>
        <nav class="navbar navbar-dark bg-primary">
            <div class="mx-auto navbar-brand">
                <%= link_to image_tag("/logo.svg", width: "100px"), "/" %>
            </div>
            <% if @current_user %>
                <div class="btn-group dropleft" style='position:absolute; top:4px; right: 4px'>
                    <div>
                        <img src="<%= @current_user.image_url %>" class="rounded-circle dropdown-toggle rounded-circle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
                        <img src= "/menu.svg" width="30px" class="rounded-circle dropdown-toggle rounded-circle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >

                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            <%= link_to '過去の投稿', '/users/posts', class: 'dropdown-item' %>
                            <%= link_to 'ガチャコレクション', '/users/collection', class: 'dropdown-item' %>
                            <%= link_to 'ログアウト', '/logout', class: 'dropdown-item' %>
                        </div>
                    </div>
                </div>
            <% else %>
            <%= link_to 'ログイン', '/auth/twitter', class: "float-right text-white", style: 'position:absolute; top:16px; right: 4px' %>
            <% end %>
        </nav>
    </header>
</div>