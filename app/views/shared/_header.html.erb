            <% if @current_user %>
                <div class="btn-group dropleft">
                    <img src="<%= @current_user.image_url %>" class=" dropdown-toggle rounded-circle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
